{
  "info": {
    "name": "Task Manager API",
    "description": "Postman collection for testing Task Manager RESTful API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "task-manager-api-collection"
  },
  "item": [
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Sample Task\",\n  \"description\": \"This is a sample task.\",\n  \"status\": \"pending\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/tasks",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks"]
        }
      }
    },
    {
      "name": "Get All Tasks",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/tasks",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks"]
        }
      }
    },
    {
      "name": "Get Task by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/tasks/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks", ":id"]
        }
      }
    },
    {
      "name": "Update Task by ID",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated Task\",\n  \"description\": \"Updated description.\",\n  \"status\": \"completed\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/tasks/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks", ":id"]
        }
      }
    },
    {
      "name": "Delete Task by ID",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "http://localhost:3000/tasks/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks", ":id"]
        }
      }
    }
  ]
}
